[flake8]
# Maximum line length
exclude = .git,__pycache__,venv,build,dist
max-line-length = 120
max-complexity = 15
ignore = E226,E302,E41,E402,E501,E731
max-complexity = 10
select = B,C,E,F,W,T4,B9
per-file-ignores =
    # Allow imports not at top of file in __init__.py
    __init__.py: F401
    # Allow bare except in test files
    tests/*.py: E722
    # Allow unused arguments in test files
    tests/*.py: F841
